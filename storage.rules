// Reglas de seguridad para Firebase Storage - Alquílamelo App (Sin Autenticación)
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir acceso completo para desarrollo (SIN AUTENTICACIÓN)
    match /{allPaths=**} {
      allow read, write: if true;
    }
    
